---
import { db } from "@/db";
import { Image } from "astro:assets";

const posts = await db.query.posts.findMany({
  where: (table, { eq }) => eq(table.public, true),
  limit: 3,
});

console.log("posts", posts);
---

<section class="py-12 px-4">
  <div class="container mx-auto">
    <h2 class="text-3xl font-bold text-gray-800 mb-8 text-center">
      Recent Updates
    </h2>
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
      {
        posts.length > 0 ? (
          posts.map((post) => (
            <article class="bg-white rounded-lg shadow-md overflow-hidden transition-transform hover:scale-105 border border-gray-100">
              <div class="aspect-video w-full relative overflow-hidden">
                <Image
                  src={post.image || "/default-post.jpg"}
                  alt={post.title}
                  width={400}
                  height={225}
                  class="object-cover w-full h-full"
                />
                <span
                  class={`absolute top-4 left-4 px-3 py-1 text-sm rounded-full ${
                    post.type === "announcement"
                      ? "bg-blue-100 text-blue-700"
                      : post.type === "news"
                        ? "bg-green-100 text-green-700"
                        : "bg-purple-100 text-purple-700"
                  }`}
                >
                  {post.type}
                </span>
              </div>
              <div class="p-6">
                <div class="flex items-center justify-end mb-4">
                  <span class="text-sm text-gray-500">
                    {new Date(post.createdAt).toLocaleDateString()}
                  </span>
                </div>
                <h3 class="text-xl font-semibold text-gray-800 mb-3">
                  {post.title}
                </h3>
                <p class="text-gray-500 text-sm mb-4">
                  {post.shortDescription}
                </p>
                <div class="flex items-center justify-end mt-4">
                  <a
                    href={`/post/${post.id}`}
                    class="inline-flex items-center text-teal-600 hover:text-teal-800 font-medium text-sm"
                  >
                    Read more
                    <svg
                      class="w-4 h-4 ml-1"
                      viewBox="0 0 24 24"
                      fill="none"
                      stroke="currentColor"
                      stroke-width="2"
                      stroke-linecap="round"
                      stroke-linejoin="round"
                    >
                      <path d="M5 12h14M12 5l7 7-7 7" />
                    </svg>
                  </a>
                </div>
              </div>
            </article>
          ))
        ) : (
          <div class="col-span-full flex flex-col items-center justify-center py-16 px-4">
            <svg
              class="w-16 h-16 text-gray-400 mb-4"
              fill="none"
              viewBox="0 0 24 24"
              stroke="currentColor"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M19 20H5a2 2 0 01-2-2V6a2 2 0 012-2h10a2 2 0 012 2v1m2 13a2 2 0 01-2-2V7m2 13a2 2 0 002-2V9.5a2 2 0 00-2-2h-2m-4-3H9M7 16h6M7 8h6v4H7V8z"
              />
            </svg>
            <h3 class="text-xl font-semibold text-gray-800 mb-2">
              No Updates Yet
            </h3>
            <p class="text-gray-500 text-center max-w-sm">
              Check back later for announcements and updates from Barangay Sto.
              Ni√±o.
            </p>
          </div>
        )
      }
    </div>
  </div>
</section>
