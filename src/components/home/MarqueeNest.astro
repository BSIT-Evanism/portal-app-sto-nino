---
import Marquee from "./Marquee.astro";
---

<Marquee server:defer>
  <div slot="fallback" class="relative overflow-hidden">
    <div
      class="flex flex-col gap-4 p-6 animate-shimmer bg-gradient-to-r from-transparent via-white/10 to-transparent"
    >
      <div
        class="h-5 bg-gradient-to-r from-gray-200 to-gray-100 rounded-lg w-3/4 transform transition-all duration-1000 hover:scale-[1.02] shadow-sm"
      >
      </div>
      <div
        class="h-5 bg-gradient-to-r from-gray-200 to-gray-100 rounded-lg w-1/2 transform transition-all duration-1000 hover:scale-[1.02] shadow-sm"
      >
      </div>
      <div
        class="h-5 bg-gradient-to-r from-gray-200 to-gray-100 rounded-lg w-2/3 transform transition-all duration-1000 hover:scale-[1.02] shadow-sm"
      >
      </div>
      <div class="space-y-4 mt-2">
        <div
          class="h-4 bg-gradient-to-r from-gray-200 to-gray-100 rounded-lg w-5/6 transform transition-all duration-1000 hover:scale-[1.02] shadow-sm"
        >
        </div>
        <div
          class="h-4 bg-gradient-to-r from-gray-200 to-gray-100 rounded-lg transform transition-all duration-1000 hover:scale-[1.02] shadow-sm"
        >
        </div>
        <div
          class="h-4 bg-gradient-to-r from-gray-200 to-gray-100 rounded-lg w-4/5 transform transition-all duration-1000 hover:scale-[1.02] shadow-sm"
        >
        </div>
      </div>
    </div>
  </div>
</Marquee>
