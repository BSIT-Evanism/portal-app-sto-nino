          <p class="text-2xl font-bold">123-456-7890</p>
        </div>
        <div class="bg-blue-50 p-6 rounded-lg">
          <h3 class="text-xl font-semibold text-blue-600 mb-3">
            Police Station
          </h3>
          <p class="text-2xl font-bold">123-456-7891</p>
        </div>
        <div class="bg-green-50 p-6 rounded-lg">
          <h3 class="text-xl font-semibold text-green-600 mb-3">
            Health Center
          </h3>
          <p class="text-2xl font-bold">123-456-7892</p>
        </div>
      </div>
    </div>
  </section>

