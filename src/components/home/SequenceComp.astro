---
import Carousel from "@/components/home/Carousel.astro";
import List from "@/components/home/List.astro";
import MarqueeNest from "./MarqueeNest.astro";
import { Image } from "astro:assets";
import RecentPosts from "./RecentPosts.astro";
---

<div class="w-full h-fit">
  <MarqueeNest />
  <!-- Hero Section -->
  <section class="px-2 pt-20 md:px-0 bg-teal-300">
    <div
      class="container max-w-7xl mx-auto grid grid-cols-1 md:grid-cols-12 gap-8 pb-4 bg-teal-300"
    >
      <!-- Left Sidebar -->
      <div class="hidden md:block md:col-span-3">
        <div class="bg-gray-50 p-6 rounded-lg">
          <h3 class="text-lg font-semibold mb-4">Latest Updates</h3>
          <div class="space-y-4">
            <div class="border-b pb-3">
              <span class="text-xs text-teal-60 0">Dec 15, 2023</span>
              <h4 class="font-medium">New Community Center Opening</h4>
            </div>
            <div class="border-b pb-3">
              <span class="text-xs text-teal-600">Dec 14, 2023</span>
              <h4 class="font-medium">Holiday Schedule Notice</h4>
            </div>
            <div class="border-b pb-3">
              <span class="text-xs text-teal-600">Dec 13, 2023</span>
              <h4 class="font-medium">Youth Program Registration</h4>
            </div>
          </div>
        </div>
      </div>

      <!-- Main Content -->
      <div class="md:col-span-6">
        <div class="space-y-8">
          <h1
            class="text-4xl font-extrabold tracking-tight text-gray-900 sm:text-5xl md:text-6xl text-center"
          >
            <span class="block">
              Welcome to
              <span class="text-teal-600">Barangay Sto. Ni√±o</span>
            </span>
          </h1>
          <p
            class="text-base text-gray-500 sm:text-lg lg:text-2xl text-center max-w-2xl mx-auto"
          >
            A site for the people of Barangay Sto. Ni√±o, Philippines.
          </p>
          <div class="flex justify-center">
            <a
              href="/tickets"
              class="inline-flex items-center px-6 py-3 text-lg text-white bg-teal-600 hover:bg-teal-700 transition-colors"
            >
              Submit a request
              <svg
                xmlns="http://www.w3.org/2000/svg"
                class="w-5 h-5 ml-2"
                viewBox="0 0 24 24"
                fill="none"
                stroke="currentColor"
                stroke-width="2"
                stroke-linecap="round"
                stroke-linejoin="round"
              >
                <line x1="5" y1="12" x2="19" y2="12"></line>
                <polyline points="12 5 19 12 12 19"></polyline>
              </svg>
            </a>
          </div>
        </div>
        <div class="mt-16 flex justify-center items-center gap-4">
          <img
            src="https://drive.google.com/thumbnail?id=11PcUpIyu_TRPwrOUroV5KSHi-q04QaA7&sz=w1000"
            alt="Barangay Image 1"
            class="aspect-video w-1/3"
          />
          <img
            src="https://drive.google.com/thumbnail?id=1rNj4AsfDzb3OV1hOZ6Sx7hsVwgKcTsYF&sz=w1000"
            alt="Barangay Image 1"
            class="aspect-video w-1/3"
          />
          <img
            src="https://drive.google.com/thumbnail?id=1-WfbDSvGioREUvJ8QnQR9-GKupx4BglI&sz=w1000"
            alt="Barangay Image 1"
            class="aspect-video w-1/3"
          />
        </div>
      </div>

      <!-- Right Sidebar -->
      <div class="hidden md:block md:col-span-3">
        <div class="space-y-6">
          <!-- Quick Links -->
          <div class="bg-gray-50 p-6 rounded-lg">
            <h3 class="text-lg font-semibold mb-4">Quick Access</h3>
            <ul class="space-y-2">
              <li>
                <a
                  href="#"
                  class="flex items-center text-gray-600 hover:text-teal-600"
                >
                  <span class="mr-2">üìù</span> Document Request
                </a>
              </li>
              <li>
                <a
                  href="#"
                  class="flex items-center text-gray-600 hover:text-teal-600"
                >
                  <span class="mr-2">üìÖ</span> Schedule Meeting
                </a>
              </li>
              <li>
                <a
                  href="#"
                  class="flex items-center text-gray-600 hover:text-teal-600"
                >
                  <span class="mr-2">üì¢</span> Report Concern
                </a>
              </li>
            </ul>
          </div>

          <!-- Upcoming Events -->
          <div class="bg-gray-50 p-6 rounded-lg">
            <h3 class="text-lg font-semibold mb-4">Upcoming Events</h3>
            <div class="space-y-3">
              <div class="flex items-start">
                <div class="bg-teal-100 p-2 rounded">
                  <span class="text-sm font-bold text-teal-800"
                    >DEC<br />20</span
                  >
                </div>
                <div class="ml-3">
                  <h4 class="text-sm font-medium">Town Hall Meeting</h4>
                  <p class="text-xs text-gray-500">6:00 PM @ Main Hall</p>
                </div>
              </div>
              <div class="flex items-start">
                <div class="bg-teal-100 p-2 rounded">
                  <span class="text-sm font-bold text-teal-800"
                    >DEC<br />25</span
                  >
                </div>
                <div class="ml-3">
                  <h4 class="text-sm font-medium">Christmas Celebration</h4>
                  <p class="text-xs text-gray-500">4:00 PM @ Plaza</p>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Quick Stats Section -->
  <section class="py-12 bg-gray-50">
    <div class="container mx-auto px-4">
      <div class="grid grid-cols-2 md:grid-cols-4 gap-6">
        <div class="text-center p-6 bg-white rounded-lg shadow-sm">
          <h3 class="text-4xl font-bold text-teal-600">15,000+</h3>
          <p class="text-gray-600">Residents</p>
        </div>
        <div class="text-center p-6 bg-white rounded-lg shadow-sm">
          <h3 class="text-4xl font-bold text-teal-600">24/7</h3>
          <p class="text-gray-600">Service</p>
        </div>
        <div class="text-center p-6 bg-white rounded-lg shadow-sm">
          <h3 class="text-4xl font-bold text-teal-600">500+</h3>
          <p class="text-gray-600">Monthly Requests</p>
        </div>
        <div class="text-center p-6 bg-white rounded-lg shadow-sm">
          <h3 class="text-4xl font-bold text-teal-600">95%</h3>
          <p class="text-gray-600">Satisfaction Rate</p>
        </div>
      </div>
    </div>
  </section>

  <!-- Emergency Services Section -->
  <section class="py-12 bg-white">
    <div class="container mx-auto px-4">
      <h2 class="text-3xl font-bold text-center mb-8">Emergency Services</h2>
      <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
        <div class="bg-red-50 p-6 rounded-lg">
          <h3 class="text-xl font-semibold text-red-600 mb-3">
            Emergency Hotline
          </h3>
          <p class="text-2xl font-bold">123-456-7890</p>
        </div>
        <div class="bg-blue-50 p-6 rounded-lg">
          <h3 class="text-xl font-semibold text-blue-600 mb-3">
            Police Station
          </h3>
          <p class="text-2xl font-bold">123-456-7891</p>
        </div>
        <div class="bg-green-50 p-6 rounded-lg">
          <h3 class="text-xl font-semibold text-green-600 mb-3">
            Health Center
          </h3>
          <p class="text-2xl font-bold">123-456-7892</p>
        </div>
      </div>
    </div>
  </section>

  <Carousel server:defer />

  <!-- Featured Services -->
  <section class="py-12 bg-gray-50">
    <div class="container mx-auto px-4">
      <h2 class="text-3xl font-bold text-center mb-8">Our Services</h2>
      <div class="grid grid-cols-2 md:grid-cols-4 gap-6">
        {
          [
            "Business Permits",
            "Barangay ID",
            "Clearance",
            "Community Programs",
            "Senior Citizen",
            "PWD Support",
            "Youth Programs",
            "Health Services",
          ].map((service) => (
            <div class="bg-white p-6 rounded-lg shadow-sm hover:shadow-md transition-shadow">
              <h3 class="text-lg font-semibold text-gray-800">{service}</h3>
              <a href="#" class="text-teal-600 text-sm">
                Learn More ‚Üí
              </a>
            </div>
          ))
        }
      </div>
    </div>
  </section>

  <RecentPosts server:defer>
    <div slot="fallback">
      <section class="py-12 px-4">
        <div class="container mx-auto">
          <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
            {
              [1, 2, 3].map(() => (
                <div class="bg-white rounded-lg shadow-md overflow-hidden animate-pulse">
                  <div class="p-6">
                    <div class="h-6 bg-gray-200 rounded w-3/4 mb-4" />
                    <div class="space-y-3">
                      <div class="h-4 bg-gray-200 rounded w-full" />
                      <div class="h-4 bg-gray-200 rounded w-full" />
                      <div class="h-4 bg-gray-200 rounded w-2/3" />
                    </div>
                    <div class="flex items-center justify-between mt-6">
                      <div class="h-4 bg-gray-200 rounded w-1/4" />
                      <div class="h-4 bg-gray-200 rounded w-1/4" />
                    </div>
                  </div>
                </div>
              ))
            }
          </div>
        </div>
      </section>
    </div>
  </RecentPosts>

  <!-- Announcements Section -->
  <section class="py-12 bg-white">
    <div class="container mx-auto px-4">
      <h2 class="text-3xl font-bold text-center mb-8">
        Important Announcements
      </h2>
      <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
        <div class="border-l-4 border-yellow-500 bg-yellow-50 p-6">
          <h3 class="text-xl font-bold text-yellow-800">COVID-19 Updates</h3>
          <p class="mt-2">Latest guidelines and vaccination schedules</p>
        </div>
        <div class="border-l-4 border-blue-500 bg-blue-50 p-6">
          <h3 class="text-xl font-bold text-blue-800">
            Community Clean-up Drive
          </h3>
          <p class="mt-2">Join us this weekend for our monthly clean-up</p>
        </div>
      </div>
    </div>
  </section>

  <List />

  <!-- Quick Links Footer -->
  <section class="py-8 bg-gray-100">
    <div class="container mx-auto px-4">
      <div class="grid grid-cols-2 md:grid-cols-4 gap-6">
        <div>
          <h4 class="font-semibold mb-4">Resources</h4>
          <ul class="space-y-2">
            <li>
              <a href="#" class="text-gray-600 hover:text-teal-600">Forms</a>
            </li>
            <li>
              <a href="#" class="text-gray-600 hover:text-teal-600"
                >Guidelines</a
              >
            </li>
            <li>
              <a href="#" class="text-gray-600 hover:text-teal-600">FAQ</a>
            </li>
          </ul>
        </div>
        <div>
          <h4 class="font-semibold mb-4">Services</h4>
          <ul class="space-y-2">
            <li>
              <a href="#" class="text-gray-600 hover:text-teal-600">Permits</a>
            </li>
            <li>
              <a href="#" class="text-gray-600 hover:text-teal-600"
                >Certificates</a
              >
            </li>
            <li>
              <a href="#" class="text-gray-600 hover:text-teal-600">Programs</a>
            </li>
          </ul>
        </div>
        <div>
          <h4 class="font-semibold mb-4">Community</h4>
          <ul class="space-y-2">
            <li>
              <a href="#" class="text-gray-600 hover:text-teal-600">Events</a>
            </li>
            <li>
              <a href="#" class="text-gray-600 hover:text-teal-600">News</a>
            </li>
            <li>
              <a href="#" class="text-gray-600 hover:text-teal-600">Directory</a
              >
            </li>
          </ul>
        </div>
        <div>
          <h4 class="font-semibold mb-4">Contact</h4>
          <ul class="space-y-2">
            <li>
              <a href="#" class="text-gray-600 hover:text-teal-600">Office</a>
            </li>
            <li>
              <a href="#" class="text-gray-600 hover:text-teal-600">Emergency</a
              >
            </li>
            <li>
              <a href="#" class="text-gray-600 hover:text-teal-600">Hotlines</a>
            </li>
          </ul>
        </div>
      </div>
    </div>
  </section>
</div>
