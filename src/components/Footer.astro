<footer class="bg-bg text-white">
  <div class="mx-auto max-w-screen-xl px-4 sm:px-6 lg:px-8 py-8">
    <div class="grid grid-cols-1 md:grid-cols-3 gap-8 items-start">
      <!-- Logo and Barangay Name -->
      <div class="flex flex-col items-center md:items-start">
        <img
          src="/brgy-logo.png"
          alt="Barangay Sto. Niño Logo"
          class="w-16 h-16 mb-2 rounded-full border-2 border-white"
        />
        <h2 class="text-lg font-bold">Barangay Sto. Niño</h2>
      </div>
      <!-- About Us -->
      <div class="flex flex-col items-center">
        <h3 class="font-semibold mb-2">About Us</h3>
        <p class="text-center text-sm max-w-xs">
          Barangay Sto. Niño Lipa City, Batangas: Your online resource for
          community information and services.
        </p>
      </div>
      <!-- Contact Us -->
      <div class="flex flex-col items-center md:items-end">
        <h3 class="font-semibold mb-2">Contact Us</h3>
        <p class="text-sm text-right">
          DOST S & T Complex, Sudlon, Lahug, Cebu City, Philippines<br />
          <br />
          Landline: +63 32 239-1474<br />
          Phone Number: +63 32 417-3514<br />
          Email: admin@iishare.com.ph
        </p>
      </div>
    </div>
    <!-- Bottom Row -->
    <div
      class="mt-8 flex flex-col md:flex-row items-center justify-between border-t border-white/20 pt-4"
    >
      <p class="text-sm">Copyright © 2025. All rights reserved.</p>
      {
        !Astro.locals.session && (
          <div class="mt-2 md:mt-0 flex gap-2 bg-white rounded-full">
            <button
              onclick="window.dispatchEvent(new CustomEvent('open-auth-modal', { detail: { mode: 'signin' } }))"
              class="bg-slate-100 text-green-700 px-4 py-1 rounded-full font-medium hover:bg-gray-100 transition"
            >
              Log in
            </button>
            <button
              onclick="window.dispatchEvent(new CustomEvent('open-auth-modal', { detail: { mode: 'signup' } }))"
              class="bg-white text-green-700 px-4 py-1 rounded-full font-medium hover:bg-gray-100 transition"
            >
              Register
            </button>
          </div>
        )
      }
    </div>
  </div>
</footer>
