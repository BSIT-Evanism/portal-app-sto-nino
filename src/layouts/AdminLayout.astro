---
import { AdminSidebar } from "@/components/AdminSidebar";
import { ChevronDown, User } from "lucide-react";
import "@/styles/globals.css";
import "leaflet/dist/leaflet.css";
import "node_modules/sonner/dist/styles.css";
import "node_modules/vaul/style.css";
import { ClientRouter } from "astro:transitions";
import { Toaster } from "@/components/ui/sonner";

// Get the current page title based on the pathname
const pathname = Astro.url.pathname;
let pageTitle = "DASHBOARD";

if (pathname.includes("/users")) {
  pageTitle = "USERS";
} else if (pathname.includes("/posts")) {
  pageTitle = "POSTS";
} else if (pathname.includes("/content")) {
  pageTitle = "ANNOUNCEMENTS";
} else if (pathname.includes("/officers")) {
  pageTitle = "OFFICIALS";
} else if (pathname.includes("/events")) {
  pageTitle = "EVENTS";
} else if (pathname.includes("/programs")) {
  pageTitle = "PROGRAM";
} else if (pathname.includes("/promotions")) {
  pageTitle = "PROMOTIONS";
} else if (pathname.includes("/requests")) {
  pageTitle = "REQUESTS";
}

// Get user data
const user = Astro.locals.user;
const userName = user?.name || "Admin";
const userRole = user?.role || "Admin";

if (Astro.locals.user?.role !== "admin") {
  return Astro.redirect("/");
}
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <ClientRouter />
    <title>Admin Portal</title>
  </head>
  <body>
    <div class="flex h-screen bg-gray-50">
      <AdminSidebar currentPath={pathname} client:only="react" />

      <div class="flex-1 flex flex-col">
        {/* Top Header */}
        <header class="bg-white border-b border-gray-200 px-6 py-4">
          <div class="flex items-center justify-between">
            <h1 class="text-2xl font-bold text-gray-900">{pageTitle}</h1>

            {/* User Profile */}
            <div class="flex items-center space-x-3">
              <div class="text-right">
                <p class="text-sm font-medium text-gray-900">{userName}</p>
                <p class="text-xs text-gray-500">{userRole}</p>
              </div>
              <div
                class="w-8 h-8 bg-gray-300 rounded-full flex items-center justify-center"
              >
                <User className="w-4 h-4 text-gray-600" />
              </div>
            </div>
          </div>
        </header>

        {/* Main Content */}
        <main class="flex-1 overflow-auto p-6">
          <slot />
        </main>
      </div>
    </div>

    <Toaster transition:persist client:only />
  </body>
</html>

<style is:global>
  html,
  body {
    margin: 0;
    width: 100%;
    height: 100%;
    scroll-behavior: smooth;
  }
</style>
