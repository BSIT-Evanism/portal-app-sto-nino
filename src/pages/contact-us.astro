---
import MapSection from "@/components/MapSection.astro";
import Layout from "../layouts/Layout.astro";
---

<Layout title="Contact Us">
    <MapSection />
    <section class="py-12 bg-white">
        <div class="container mx-auto px-4">
            <h2 class="text-3xl font-bold text-center mb-8">
                Emergency Services
            </h2>
            <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
                <div class="bg-red-50 p-6 rounded-lg">
                    <h3 class="text-xl font-semibold text-red-600 mb-3">
                        Emergency Hotline
                    </h3>
                    <p class="text-2xl font-bold">123-456-7890</p>
                </div>
                <div class="bg-blue-50 p-6 rounded-lg">
                    <h3 class="text-xl font-semibold text-blue-600 mb-3">
                        Police Station
                    </h3>
                    <p class="text-2xl font-bold">123-456-7891</p>
                </div>
                <div class="bg-green-50 p-6 rounded-lg">
                    <h3 class="text-xl font-semibold text-green-600 mb-3">
                        Health Center
                    </h3>
                    <p class="text-2xl font-bold">123-456-7892</p>
                </div>
            </div>
        </div>
    </section>
</Layout>
