---
import { Signin } from "@/components/Signin";
import Layout from "@/layouts/Layout.astro";

if (Astro.locals.session) {
  return Astro.redirect("/");
}
---

<Layout>
  <main
    class="min-h-screen grid place-items-center bg-gradient-to-br from-indigo-50 to-white"
  >
    <div
      class="w-full flex flex-col items-center max-w-md p-8 space-y-6 bg-white rounded-xl shadow-lg"
    >
      <Signin client:only="react" />
      <a class="text-blue-500 text-sm text-center" href="/signup"
        >Don't have an account? Signup</a
      >
    </div>
  </main>
</Layout>
