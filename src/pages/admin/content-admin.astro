---
import { DownloadableTable } from "@/components/DownloadableTable";
import { HighlightsTable } from "@/components/HighlightsTable";
import Layout from "@/layouts/AdminLayout.astro";
---

<Layout>
  <div
    class="mb-4 bg-white p-8 shadow-sm border border-slate-100 transition-all hover:shadow-md"
  >
    <div class="flex items-center gap-3 mb-6">
      <svg
        class="w-6 h-6 text-teal-600"
        fill="none"
        stroke="currentColor"
        viewBox="0 0 24 24"
      >
        <path
          stroke-linecap="round"
          stroke-linejoin="round"
          stroke-width="2"
          d="M5 3v4M3 5h4M6 17v4m-2-2h4m5-16l2.286 6.857L21 12l-5.714 2.143L13 21l-2.286-6.857L5 12l5.714-2.143L13 3z"
        ></path>
      </svg>
      <h2 class="text-2xl font-semibold text-slate-800">Highlights</h2>
    </div>
    <p class="text-slate-600 mb-4">
      Highlights are used to display content on the home page.
    </p>
    <HighlightsTable client:only="react" />
  </div>
  <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-6">
    <div class="flex items-center gap-3 mb-6">
      <svg
        class="w-6 h-6 text-green-600"
        fill="none"
        stroke="currentColor"
        viewBox="0 0 24 24"
      >
        <path
          stroke-linecap="round"
          stroke-linejoin="round"
          stroke-width="2"
          d="M12 10v6m0 0l-3-3m3 3l3-3m2 8H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"
        ></path>
      </svg>
      <h2 class="text-2xl font-semibold text-gray-900">Downloadable Content</h2>
    </div>
    <p class="text-gray-600 mb-4">
      Add downloadable content here such as pdfs, documents, etc.
    </p>
    <DownloadableTable client:only="react" />
  </div>
</Layout>
