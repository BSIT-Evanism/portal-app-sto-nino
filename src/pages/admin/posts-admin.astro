---
import PostsTableNest from "@/components/PostsTableNest.astro";
import Layout from "@/layouts/AdminLayout.astro";
---

<Layout>
  <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-6">
    <div class="flex items-center gap-3 mb-6">
      <svg
        class="w-6 h-6 text-green-600"
        fill="none"
        stroke="currentColor"
        viewBox="0 0 24 24"
      >
        <path
          stroke-linecap="round"
          stroke-linejoin="round"
          stroke-width="2"
          d="M19 20H5a2 2 0 01-2-2V6a2 2 0 012-2h10a2 2 0 012 2v1m2 13a2 2 0 01-2-2V7m2 13a2 2 0 002-2V9.5a2 2 0 00-2-2h-2m-4-3H9M7 16h6M7 8h6v4H7V8z"
        ></path>
      </svg>
      <h2 class="text-2xl font-semibold text-gray-900">Posts</h2>
    </div>
    <PostsTableNest server:defer>
      <div
        slot="fallback"
        class="flex items-center justify-center h-full my-10"
      >
        <div
          class="animate-spin rounded-full h-8 w-8 border-b-2 border-green-600"
        >
        </div>
      </div>
    </PostsTableNest>
  </div>
</Layout>
